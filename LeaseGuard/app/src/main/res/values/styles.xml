<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- FAB theme -->
    <style name="DocumentsFAB">
        <item name="colorAccent">@color/darkblack</item> <!-- FAB bg color -->
        <item name="sdMainFabClosedIconColor">@color/white</item> <!-- FAB icon color -->
        <item name="colorPrimary">@color/white</item> <!-- action bg color -->
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/watchoutred</item>
    </style>
    <style name="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkblack</item>
    </style>
    <style name="BaseText.Text16">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BaseText.Text14">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="BaseText.Text12">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="BaseText.Text11">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="BaseText.Text10">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="BaseText.TitleText">
        <item name="android:textSize">
            36sp
        </item>
        <item name="android:textColor">
            #019AE8
        </item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
